<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">New Campground</a>
    </div>
   
        <% for (let campground of campgrounds) {%>
           <div class="card mn-3 my-3" >
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid h-100" alt="" src="<%= campground.images[0].url %> " >
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class = "card-text"><%= campground.description %></p>
                        <p class = "card-text">Price: $<%= campground.price %></p>
                        <p class = "card-text"><%= campground.location %></p>
                        <a class="btn btn-primary" href=" /campgrounds/<%= campground._id  %>">View <% campground.title %></a>
                    </div>
                </div>
            </div>
           </div>
        <% } %>
    
